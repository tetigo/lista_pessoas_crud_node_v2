<% include ../partials/header.ejs %>

    <h1>Editar Pessoa</h1>
    <p><a href="/pessoas">Voltar a Lista de Pessoas</a></p>

<!-- sempre que  tiver duvida sobre os dados, usar esse comando que mostra tudo do objeto:-->
    <!-- <%= JSON.stringify(pessoa) %> -->

    <form method="post">
        <div class="form-group">
          <label for="nome">Nome</label>
          <input name="nome" type="text" class="form-control" id="nome" placeholder="Entre nome" value="<%= pessoa.nome %>">
        </div>

        <div class="form-group">
            <label for="nacionalidade">Nacionalidade</label>
            <input name="nacionalidade" type="text" class="form-control" id="nacionalidade" placeholder="Entre nacionalidade" value="<%= pessoa.nacionalidade %>">
        </div>

        <div class="form-group">
            <label for="cargo">Cargo</label>
            <input name="cargo" type="text" class="form-control" id="cargo" placeholder="Entre cargo" value="<%= pessoa.cargo %>">
        </div>
        <input name="id" type="hidden" value="<%= pessoa.id %>">
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>

<% include ../partials/footer.ejs %>


