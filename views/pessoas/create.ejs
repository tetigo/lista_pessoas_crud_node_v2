<% include ../partials/header.ejs %>

    <h1>Nova Pessoa</h1>
    <p><a href="/pessoas">Voltar a Lista de Pessoas</a></p>

    <form method="post">
        <div class="form-group">
          <label for="nome">Nome</label>
          <input name="nome" type="text" class="form-control" id="nome" placeholder="Entre nome">
        </div>

        <div class="form-group">
            <label for="nacionalidade">Nacionalidade</label>
            <input name="nacionalidade" type="text" class="form-control" id="nacionalidade" placeholder="Entre nacionalidade">
        </div>

        <div class="form-group">
            <label for="cargo">Cargo</label>
            <input name="cargo" type="text" class="form-control" id="cargo" placeholder="Entre cargo">
        </div>
  
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>

